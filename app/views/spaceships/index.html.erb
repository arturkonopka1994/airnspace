<div class="container-main">
  <div class="banner2" style="background-image: url(https://images.unsplash.com/photo-1444703686981-a3abbc4d4fe3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3300&q=80);">
      <div class="container">
        <% if current_page?("/spaceships") %>
        <div class="header justify-content-center">
          <h1 id="header-text">AIR'N'SPACE!</h1>
          <a class="neon-button justify-content-center" href="<%= new_spaceship_path %>">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Rent your spaceship now! 
          </a>
        </div>
        <% else %>
        <%= link_to 'Spaceships', spaceships_path, class:"btn btn-secondary" %>
        <% end %>
      </div>
  </div>
  <div class="container push-footer">
    <h1 class="text-center">Current Spaceships for Rent</h1>
    <div class="row justify-content-center">      
      <div class="container-cards">
        <% @spaceships.each do |spaceship| %>
          <div class="box">
            <div class="imgBx">
              <img src="<%= cl_image_path spaceship.photo.key, height: 300, width: 400, crop: :fill %>" alt="">
            </div>
            <div class="contentBx">
              <div>
                <%= link_to spaceship.model, spaceship_path(spaceship), class: 'card-link' %>
                <h2><%= spaceship.model.upcase %></h2>
                <p><%= spaceship.currency %><%= spaceship.cost %> per day</p>
                <p><%= spaceship.country_name %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  
</div>
