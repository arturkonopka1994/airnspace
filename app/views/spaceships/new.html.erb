
<div style="background-image: url(https://wallpapercave.com/wp/wp3837738.jpg); width: 100vw; margin-top:19px; margin-left: 0; margin-right: 0; background-repeat: no-repeat; background-size: auto; ">
    <div class="container push-footer" style="color: white">

      <h1 style="color:white; padding-top: 100px;">New Spaceship</h1>
      <%= simple_form_for(@spaceship) do |f| %>
      <%= f.input :model %>
      <%= f.input :capacity %>
      <%= f.input :cost %>
      <%= f.input :currency, collection: [ "£", "$", "€" ] %>
      <label class="select required" for="spaceship_location">Location *</label>
      <%= f.country_select :location, {}, {class: 'form-control select optional'} %>
      <br>
      <%= f.input :captain_name %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: "btn-primary" %>
      <%= link_to 'Back', spaceships_path, class: "btn btn-primary" %>
      <% end %>
      <br>
    </div>
</div>

