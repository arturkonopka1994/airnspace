<div class="container">

  <h1>New Spaceship</h1>
  <%= simple_form_for(@spaceship) do |f| %>
  <%= f.input :model %>
  <%= f.input :capacity %>
  <%= f.input :cost %>
  <%= f.input :currency, collection: [ "£", "$", "€" ] %>
  <label class="select required" for="spaceship_location">Location *</label>
  <%= f.country_select :location, {}, {class: 'form-control select optional'} %>
  <br>
  <%= f.input :captain_name %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
  <% end %>
 
</div>

<div class="container">
  <br>
  <%= link_to 'Back', spaceships_path, class: "btn btn-dark" %>
</div>


